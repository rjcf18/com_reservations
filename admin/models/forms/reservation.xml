<?xml version="1.0" encoding="utf-8"?>
<form>
    <fieldset>
        <fieldset>
            <field
                    name="id"
                    type="text"
                    label="COM_RESERVATIONS_RESERVATIONS_FIELD_ID_LABEL"
                    description="COM_RESERVATIONS_RESERVATIONS_FIELD_ID_DESC"
                    filter="INTEGER"
                    class="readonly"
                    readonly="true"
            />

            <field name="space_id" label="COM_RESERVATIONS_FIELD_SPACE_LABEL" description="COM_RESERVATIONS_FIELD_SPACE_LABEL"
                   type="space"
                   class="inputbox"
            />

            <field name="name" label="COM_RESERVATIONS_FIELD_NAME_LABEL" description="COM_RESERVATIONS_FIELD_NAME_DESC"
                   type="text"
                   class="inputbox"
            />

            <field name="start" label="COM_RESERVATIONS_FIELD_START_LABEL" description="COM_RESERVATIONS_FIELD_START_DESC"
                   type="calendar"
                   class="inputbox"

            />
            <field name="end" label="COM_RESERVATIONS_FIELD_END_LABEL" description="COM_RESERVATIONS_FIELD_END_DESC"
                   type="calendar"
                   class="inputbox"
            />
            <field name="published" type="list" label="JSTATUS"
                   description="JFIELD_PUBLISHED_DESC" class="custom-select-color-state"
                   filter="intval" size="1" default="1"
            >
                <option value="1">
                    JPUBLISHED</option>
                <option value="0">
                    JUNPUBLISHED</option>
                <option value="2">
                    JARCHIVED</option>
                <option value="-2">
                    JTRASHED</option>
            </field>

        </fieldset>

    </fieldset>

</form>